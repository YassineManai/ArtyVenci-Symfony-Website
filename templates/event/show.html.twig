{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdEvent</th>
                <td>{{ event.idEvent }}</td>
            </tr>
            <tr>
                <th>EName</th>
                <td>{{ event.eName }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ event.place }}</td>
            </tr>
            <tr>
                <th>EDate</th>
                <td>{{ event.eDate ? event.eDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>TicketPrice</th>
                <td>{{ event.ticketPrice }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ event.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}">back to list</a>

    <a href="{{ path('app_event_edit', {'idEvent': event.idEvent}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
