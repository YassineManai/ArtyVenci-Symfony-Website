{% block content %}
    <li style="padding: 24px; background: var(--light); border-radius: 20px;">
        <div class="head-title">
            <div class="left">
                <h1 style="font-size: 30px;font-weight: 600;margin-bottom: 10px;color: var(--dark);">Liste des Discussions Signal√©es</h1>
            </div>
            <a href={{path('Block_Users')}} style="color: var(--dark);font-size: 20px;font-weight: 600;">Blocked Users<img src="{{asset('img/Blocked.png')}}" style="width: 30px;margin-left: 10px;position: relative;top: 5px;"></a>
        </div>
        <div class="table-wrapper">
            <table class="fl-table" id="userTable">
                <thead>
                    <tr>
                        <th style="background:#144CCC; text-align: center;">ID Discussion</th>
                        <th style="background:#144CCC; text-align: center;">Receiver</th>
                        <th style="background:#144CCC; text-align: center;">Sender</th>
                        <th style="background:#144CCC; text-align: center;">Raison de Signalement</th>
                        <th style="background:#144CCC; text-align: center;">Annuler le Signalement</th>
                    </tr>
                </thead>
                <tbody>
                    {% for discussion in discussions %}
                        <tr>
                            <td style="text-align: center;">{{ discussion.iddis }}</td>
                            <td style="text-align: center;">{{ discussion.receiver.username }}</td>
                            <td style="text-align: center;">{{ discussion.idsender }}</td>
                            <td style="text-align: center;">{{ discussion.sig }}</td>
                            <td style="text-align: center;"><a href="{{ path('app_discussion_annul_signal', {'iddis': discussion.iddis}) }}"><img src="{{ asset('img/discussion/annulerSig.png') }}" alt="Annuler" width="30" height="30"></a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
